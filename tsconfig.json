{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "es6",
		"target": "ES2020",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "Node",
		"strict": true,
		"strictPropertyInitialization": false,
		"noImplicitAny": false,
		"baseUrl": "./",
		"paths": {
			"*": ["src/*"]
		},
		"declaration": true,
		"declarationDir": "./types",
		"skipLibCheck": true
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["./node_modules"]
}
